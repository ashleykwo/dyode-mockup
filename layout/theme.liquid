<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'normalize.css' | asset_url | stylesheet_tag }}
  {{ 'application.scss.css' | asset_url | stylesheet_tag }}
  
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css"/>
</head>
<body>
  {% section 'announcement-bar' %}
  
  {% section 'header' %}

  <main role="main">
    {{ content_for_layout }}
  </main>
  
  {% section 'footer' %}
  
  <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
  <script type="text/javascript">
	/* COLLECTION SLIDER */
    $(document).ready(function(){
      $('.collection-slider').slick({
        "slidesToShow": 4,
        "slidesToScroll": 1,
        prevArrow:'<img src="{{ 'arrow-left.png' | asset_url }}" class="arrow-left" />',
        nextArrow:'<img src="{{ 'arrow-right.png' | asset_url }}" class="arrow-right" />',
        responsive:[
          {breakpoint:1080,settings:{
            slidesToShow:2,
          }},
          {breakpoint:525,settings:{
            slidesToShow:1,
          }},
        ],
      });
    });
  </script>
  {{ 'application.js' | asset_url | script_tag }}
  
  
</body>
</html>