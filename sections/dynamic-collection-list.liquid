<section class="collection-list">
  <div class="wrapper">
    {% for block in section.blocks %}
    <div class="collection">
      <a href="{{ block.settings.link }}">
        <img class="collection-image" src="{{ block.settings.image | img_url: "500x" }}">
        <div class="collection-text">
          <h2>{{ block.settings.title }}</h2>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>
</section>


{% schema %}
{
  "name" : "Collection List",
  "tag" : "section",
  "blocks" : [
    {
      "name" : "Collection",
      "type" : "slide",
      "settings" : [
        {
          "label" : "Image",
          "type" : "image_picker",
          "id" : "image"
        },
        {
          "label" : "Title",
          "type" : "text",
          "id" : "title"
        },
        {
          "label" : "Link",
          "type" : "url",
          "id" : "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List",
      "category": "Image"
    }
  ]
}
{% endschema %}