@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,700|Pacifico&display=swap');

$main_color : {{ settings.main_color }};
$secondary_color : {{ settings.secondary_color }};
$tertiary_color: {{ settings.tertiary_color }};

$padding-gutter-desktop: 6rem;
$footer-padding-gutter-tablet: 9rem;
$footer-padding-gutter-mobile: 3rem;

* {
  margin: 0;
  padding: 0;
}

html {
  font-size: 10px;
  font-family: 'Open Sans', Arial, sans-serif;
  font-weight: 300;
}

h1,
h2,
h3,
h4 {
  font-family: 'Pacifico', cursive;
  font-weight: normal;
}

h1 { font-size: 5rem } // fix
h2 { font-size: 5rem }
h3 { font-size: 3.75rem }
h4 { font-size: 1.5rem }

.announcement {
  font-size: 2.5rem;
  padding: 1.5rem;
  text-align: center;
}

.header {
  font-size: 2.5rem;
  padding: 3rem;
}

.text-right {
  display: flex;
  flex-direction: row-reverse;
}

.img-with-txt {
  padding: $padding-gutter-desktop;
  color: $tertiary_color;
  background-size: cover;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  line-height: 1.5;

  .wrapper {
    margin: 15rem 0;
  }
  
  p {
    font-size: 3.5rem;
  }
  
  .btn {
    margin-top: 5rem;
    
    a {
      color: $tertiary_color;
      background: $main_color;
      font-size: 2rem;
      padding: 1.25rem 3.25rem;
      font-weight: 600;
      text-transform: uppercase;
      text-decoration: none;
    }
  } // end btn
} // end img-with-txt

.newsletter {
  padding: 5rem 9rem;
  color: $tertiary_color;
  background: $main_color;
  font-size: 2rem;
  
  div {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 3rem 0;
    
    & > * {
      padding: 0 1rem;
    }
  }
  
  h3 {
    text-align: center;
  }
  
  .bottom > * {
  }

  p {
    width: 50%;
  }
  
  input {
    width: 30rem;
    font-size: 1.5rem;
    margin: 0 .5rem;
    padding: 1.5rem;
  }
  
  button {
    width: 17.5rem;
    font-family: 'Pacifico', cursive;
    color: $tertiary_color;
    background: $main_color;
    box-sizing: border-box;
    border: 3px solid $tertiary_color;
    margin: 0 .5rem;
    padding: 1rem 2rem;
    vertical-align: bottom;
  	align-self: center;
  }
  
  button:hover,
  button:focus {
    cursor: pointer;
    color: $main_color;
    background: $tertiary_color;
  }
}

.footer {
  display: grid;
  padding: $padding-gutter-desktop;
  color: $tertiary_color;
  background: $secondary_color;
  font-size: 1.5rem;
  line-height: 2;
  grid-template-columns: 2fr 1fr 8fr 1fr;
  
  .menu-1 {
    grid-column-start: 1;
  }
  
  .menu-2 {
    grid-column-start: 3;
  }
  
  .social-media {
    grid-column-start: 11;
  }

  ul {
    li {
      list-style-type: none;
      
      a {
        color: $tertiary_color;
        text-decoration: none;
      }
    }
  }
  
  .social-links {
    padding: 1rem 0;
    
    a:not(:first-child):not(:last-child) {
      padding: 0 1rem;
    }
  } // end social links
} // end footer


@media screen and (min-width: 768px) and (max-width: 1080px) {
  /* IMAGE WITH TEXT SECTION */
  .img-with-txt {
    .wrapper {
      margin: 12.5rem 0;
    }
  }
  
  /* NEWSLETTER */
  .newsletter {
    padding: 5rem 9rem;
    font-size: 2rem;

    div {
      display: inline;
      
      & > * {
        display: inline-block;
        width: 100%;
      }
    }
    
    .image, p {
      text-align: center;
      padding: 2rem 0;
    }
    
    .form {
      display: flex;
      flex: 0 0;
    }
  }
}

