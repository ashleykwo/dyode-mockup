    line-height: 1.25;
    padding: $footer-padding-gutter-tablet;

    .menu-1 {
      grid-column-start: 1;
      grid-column-end: 12;

      h4 {
        display: block;
        cursor: pointer;
      }

      h4:after {
        content: "+";
        float: right;
      }

      h4.active:after {
        content: "-"
      }

      .content {
        display: none;
      }

      .show {
        display: block;
      }
    }
    
    .menu-2 {
