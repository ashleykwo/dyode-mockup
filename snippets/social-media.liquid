<h4>Follow Us</h4>
<div class="social-links">
{% if settings.facebook_link %}
  <a href="{{ settings.facebook_link}}">{{ 'icon-facebook.png' | asset_url | img_tag }}</a>
{% endif %}
{% if settings.instagram_link %}
  <a href="{{ settings.instagram_link}}">{{ 'icon-instagram.png' | asset_url | img_tag }}</a>
{% endif %}
{% if settings.twitter_link %}
  <a href="{{ settings.twitter_link}}">{{ 'icon-twitter.png' | asset_url | img_tag }}</a>
{% endif %}
</div>